<div class="row">
  <div class="col-md-6">
    <h3>Empresas</h3>
  </div>
  <div class="col-md-6 d-flex flex-row-reverse">
    <%= link_to raw("<i class='fa fa-plus'></i> Agregar"), new_company_path,
      class: 'btn btn-success' %>
  </div>
</div>
<br>
<table class="table table-bordered">
  <thead class="red-head">
    <tr>
      <th>NOMBRE</th>
      <th class="col-md-2"></th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td class="text-center">
          <%= link_to raw('<i class="fa fa-eye"></i>'),
            company_path(c), 'data-turbolinks': false, class: "btn btn-info",
            title: "Ver" %>
          <%= link_to raw('<i class="fa fa-edit"></i>'),
            edit_company_path(c), 'data-turbolinks': false, title: "Editar",
            class: "btn btn-warning" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
