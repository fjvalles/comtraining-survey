<%= simple_form_for(@survey, url: create_or_update_surveys_path, method: :post) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-md-6">
      <h3>FACTORES/COMPETENCIAS</h3>
    </div>
    <div class="col-md-6">
      <div class="links">
        <%= link_to_add_association raw("<i class='fa fa-plus'></i>"), f, :proficiencies,
          class: 'btn btn-success pull-right', partial: 'proficiency_fields',
          'data-association-insertion-method': 'append',
          'data-association-insertion-node': '.table-items' %>
        </div>
      </div>
    </div>
    <br>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :company_id, collection: Company.all.collect {|p| [p.name, p.id]}.sort {|a,b| a<=>b},
        selected: @current_company, input_html: { class: 'form-control cia-prof', 'data-placeholder': 'Empresa' },
        label: 'NOMBRE EMPRESA', required: true %>
    </div>
    <div class="col-md-6">
      <%= f.input :s_type, collection: Survey.s_types.collect { |ct| [Survey.human_attribute_name("s_type.#{ct[0]}"), ct[0]] },
        selected: @current_s_type, required: true, label: 'TIPO ENCUESTA',
        input_html: { class: 'form-control cia-type' } %>
    </div>
  </div>
  <br>
  <table class="table table-bordered">
    <thead class="red-head">
      <tr>
        <th>ID</th>
        <th>NOMBRE</th>
        <th>DESCRIPCIÃ“N</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="table-items">
      <%= f.simple_fields_for :proficiencies do |proficiency| %>
        <%= render 'proficiency_fields', f: proficiency %>
      <% end %>
    </tbody>
  </table>
  <%= f.submit 'Guardar', class: 'btn btn-danger pull-right' %>
<% end %>
